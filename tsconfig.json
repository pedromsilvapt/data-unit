{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "noImplicitAny": true,
        "sourceMap": true,
        "outDir": "lib/",
        "experimentalDecorators": true,
        "lib": [
            "es2015", "esnext"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules/**/*",
        "**/*.spec.ts",
        "lib/**/*"
    ]
}